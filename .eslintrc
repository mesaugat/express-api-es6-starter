{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "semi": 2,
    "curly": 2,
    "no-var": 2,
    "eqeqeq": 2,
    "eol-last": 2,
    "spaced-comment": 2,
    "space-infix-ops": 2,
    "newline-before-return": 2,
    "linebreak-style": [2, "unix"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "camelcase": [2, {"properties": "never"}],
    "quotes": [2, "single", {"allowTemplateLiterals": true}]
  }
}
